.row
  .div{class: "col-sm-#{i}"}
  .div{class: "col-sm-#{12 - i}"}
    %hr
    - mapping_selectors(m).each do |col|
      = f.fields_for a do |f|
        .form-group
          = f.label col, "#{a} (#{m.capitalize}) => #{col}"
          = f.select(col, @spreadsheet.originable_headers, {include_blank: true}, class: "custom-select")
    - ancestors.each do |ancestor|
      - unless ancestors.blank?
        = f.fields_for a do |f|
          = render partial: "legend", locals: locals(ancestor, f, i+1)
